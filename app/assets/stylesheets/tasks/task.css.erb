.task {
  background-image: url(<%= asset_path 'task_img.png' %>);
  position: relative;
  overflow: hidden;
}

.task .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(37, 39, 71, 0.7);
  padding: 30px;
  display: flex;
  align-items: flex-end;
  transition: all 0.4s ease;
  opacity: 0;
}

.task img {
  transition: all 0.4s ease;
}